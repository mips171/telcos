alias help='cat /etc/shell_help.txt'
alias lanip='echo -n "LAN IP: " && uci get network.lan.ipaddr'
alias wanip='echo -n "Wired WAN IP: " &&  ifconfig eth0 | grep "inet addr" | cut -d '"'"':'"'"' -f 2 | cut -d '"'"' '"'"' -f 1'
alias mobileip='echo -n "Mobile Data IP: " &&  ifconfig wwan0 | grep "inet addr" | cut -d '"'"':'"'"' -f 2 | cut -d '"'"' '"'"' -f 1'
alias myip='lanip && wanip && mobileip'
alias mobiledatastatus='mmcli -m any'
alias signalstr='mmcli -m any --signal-setup=90 && mmcli -m any --signal-get'
alias stopmobileconnection='ifdown mobiledata'
alias startmobileconnection='ifup mobiledata'
alias wificlients='iwinfo wlan0 assoclist'
alias status='myip && mobiledatastatus'
alias license='less /etc/TELCO_ELECTRONICS_EULA.txt'
alias imei='echo "IMEI: $(mmcli -m any |  grep "equipment id" | sed "'"s/.*: //"'" | tr -cd [:digit:] | tr -c [:digit:])"'
alias castatus='qmicli -p -d /dev/cdc-wdm0 --nas-get-lte-cphy-ca-info'
alias showlteband='qmicli -p -d /dev/cdc-wdm0 --nas-get-rf-band-info'
alias showhomenetwork='qmicli -p -d /dev/cdc-wdm0   --nas-get-home-network'
alias mobileserviceinfo='qmicli -p -d /dev/cdc-wdm0   --nas-get-system-info && showhomenetwork'
alias resetmodembands='mmcli -m any --set-current-bands=any'
alias modemdebugmode_on='echo "Enabling modem debug mode. Please wait." && echo true > /etc/modemsettings/modem_debug_mode && /etc/init.d/modemmanager restart && echo "Modem debug mode enabled. Please be careful."'
alias modemdebugmode_off='echo false > /etc/modemsettings/modem_debug_mode && /etc/init.d/modemmanager restart'
alias rma_modem='/usr/bin/rma_modem.sh'
alias power_modem_off='/usr/bin/power_off_modem.sh'
alias power_modem_on='/usr/bin/power_on_modem.sh'
